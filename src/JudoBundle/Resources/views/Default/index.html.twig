            </tr>
            </thead>
            <tbody >
            {% for ranking in rankingsB %}
                <tr>
                    <td>{{ ranking.club.name }}</td>
                    <td>{{ ranking.rank }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="col-sm-6">
        <h2>Classement Poussins !</h2>
        <table class="table">
            <thead>
            <tr>
                <th>Nom du club</th>
                <th>Classement</th>
            </tr>
            </thead>
            <tbody >
            {% for ranking in rankingsP %}
                <tr>
                    <td>{{ ranking.club.name }}</td>
                    <td>{{ ranking.rank }}</td>
                </tr>
            {% endfor %}
